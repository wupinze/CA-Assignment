@{ List<Product> ProductList = (List<Product>)ViewData["ProductList"];
    List<int> QuantityList = (List<int>)ViewData["QuantityList"];
    string tp = (string)ViewData["tp"];
    double totalprice = double.Parse(tp);
    string nameOfUser = (string)ViewData["username"];
    string name = string.Format(nameOfUser.Substring(0, 1).ToUpper() + nameOfUser.Substring(1).ToLower());
    string empty = "Your Cart is empty.";}
    


<body>
    <div class="greeting-div">
        <h3>Hello, @name</h3>
       
        @{
            if (ProductList.Any())
            {
                <p style="font-size:32px"><a href="/Gallery/Index">Continue Shopping</a> | <a href="/Cart/Checkout">Checkout</a></p>
            }
            else
            {   <script src="~/js/Checkout.js"></script>
                <p style="font-size:32px"><a href="/Gallery/Index">Continue Shopping</a> | <a href="" onclick="checkoutalert()">Checkout</a></p>
            }
        }

    </div>
    <p style="font-size:36px; font-weight:bold" align="right" class="tp" id="price-product"> Total: $ @totalprice</p>


    @{
        if (ProductList.Any())
        {
            for (int i = 0; i < ProductList.Count(); i++)
            {
        <form action="ShoppingCart" method="post">
            <div class="product_details">
                <div class=" image">
                    <img src="@ProductList[i].imageUrl" alt="">

                    <h3 style="font-size:32px; font-weight:bold">@ProductList[i].ProductName</h3>
                    <h4>@ProductList[i].Description</h4>
                </div>
                <div class="price_quantity">
                    <p><span class="price" id="per-price">Price: &ensp;&emsp;$@ProductList[i].Price</span> </p>
                    <div class="btn-numbox">
                        <p class="number">Quantity:</p>
                        <button type="submit" formaction="ShoppingCart?clickedBtn=r-@ProductList[i].Id">-</button>

                        <p><input type="text" class="input-num" id="input-num" value="@QuantityList[i]" /></p>
                        <button type="submit" formaction="ShoppingCart?clickedBtn=a+@ProductList[i].Id">+</button>

                    </div>
                </div>
            </div>
            
        </form>
            }
        }
        else
        {
            <p style="font-size:36px; font-weight:bold" align="center">@empty</p>
        }
    }
</body>