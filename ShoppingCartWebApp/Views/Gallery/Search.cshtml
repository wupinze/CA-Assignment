@{
    List<Product> products = (List<Product>)ViewData["products"];
    string searchStr = (string)ViewData["searchStr"];
    int cartQuantity = 5; 
    string nameOfUser = "Glendon Tan";
}

<div class="gallery-header">
    <div class="greeting-div">
        <h3>Hello, @nameOfUser</h3>
        <p><a href="#">My Purchases</a> | <a href="#">Logout</a></p>
    </div>
    <div class="cart-div">
        <img src="../image/cart_logo.png" class="cart-logo" alt="Alternate Text" />
        <p class="cart-quantity">(@cartQuantity)</p>
    </div>
</div>
<div class="searchbar-div">
    <form action="/Gallery/Search" method="POST">
        <input class="searchbar-input" type="text" value = "@searchStr" placeholder="Search" name="searchStr" />
        <input type="submit" value="Submit" style="display:none;" />
    </form>
</div>
<div class="card-container">
    @{
        foreach (var product in products)
        {
        <div class="card">
            
            <img src="@product.imageUrl" alt="">

            <h3>@Html.Raw(Helper.Highlight(product.ProductName,searchStr)) </h3>
            <p>@Html.Raw(Helper.Highlight(product.Description, searchStr))</p>
            
            <button class="add-to-cart" type="button" onclick=""><span>$@product.Price</span> - Add to cart</button>
        </div>



        }



    }

</div>